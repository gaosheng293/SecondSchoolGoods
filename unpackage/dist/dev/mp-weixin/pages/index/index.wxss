
.page.data-v-1cf27b2a { background: #f5f5f5; min-height: 100vh;
}

/* 顶部导航 */
.navbar.data-v-1cf27b2a {
	position: fixed; top: 0; left: 0; right: 0; height: 88rpx; background: linear-gradient(135deg, #667eea, #764ba2); 
	display: flex; align-items: center; justify-content: space-between; padding: 0 32rpx; z-index: 999; color: #fff;
}
.school-name.data-v-1cf27b2a { font-size: 36rpx; font-weight: bold; max-width: 360rpx; overflow: hidden; text-overflow: ellipsis; white-space: nowrap;
}
.change-btn.data-v-1cf27b2a { font-size: 24rpx; opacity: 0.9; margin-left: 12rpx;
}
.change-university-btn.data-v-1cf27b2a {
  position: absolute;
  top: -80rpx;                        /* 正常 rpx 可以这样写 */
  left: 50%;
  transform: translateX(-50%);
  background: rgba(255, 255, 255, 0.28);
  -webkit-backdrop-filter: blur(12px);
          backdrop-filter: blur(12px);        /* 改成 px，微信小程序完全支持 */
  border: 1rpx solid rgba(255, 255, 255, 0.35);
  border-radius: 32rpx;
  padding: 8rpx 20rpx;
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 24rpx;
  color: #666;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  z-index: 10;
}
.change-university-btn .btn-text.data-v-1cf27b2a {
  font-weight: 500;
}
.navbar-left.data-v-1cf27b2a {
  position: relative;
  padding-top: 20rpx;
}
/* 轮播 */
.banner-swiper.data-v-1cf27b2a { height: 360rpx;
}
.banner-img.data-v-1cf27b2a { width: 100%; height: 100%;
}

/* 快捷入口 */
.quick-entries.data-v-1cf27b2a {
	display: flex; flex-wrap: wrap; background: #fff; padding: 32rpx 20rpx 20rpx; margin-bottom: 20rpx;
}
.entry-item.data-v-1cf27b2a { width: 25%; text-align: center; margin-bottom: 32rpx;
}
.entry-icon.data-v-1cf27b2a { width: 96rpx; height: 96rpx; border-radius: 24rpx;
}
.entry-icon.big.data-v-1cf27b2a { width: 124rpx; height: 124rpx; background: linear-gradient(135deg, #ff6b6b, #ee5a52);
}
.entry-text.data-v-1cf27b2a { display: block; margin-top: 16rpx; font-size: 28rpx; color: #333;
}

/* 推荐商品 */
.section.data-v-1cf27b2a { padding: 0 24rpx;
}
.section-header.data-v-1cf27b2a { display: flex; justify-content: space-between; align-items: center; height: 88rpx;
}
.section-title.data-v-1cf27b2a { font-size: 36rpx; font-weight: bold;
}
.section-more.data-v-1cf27b2a { font-size: 28rpx; color: #999;
}
.goods-waterfall.data-v-1cf27b2a { display: flex;
}
.column.data-v-1cf27b2a { flex: 1;
}
.column.data-v-1cf27b2a:first-child { margin-right: 16rpx;
}
.goods-card.data-v-1cf27b2a { background: #fff; border-radius: 20rpx; overflow: hidden; margin-bottom: 24rpx; box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05);
}
.goods-cover.data-v-1cf27b2a { width: 100%; height: 360rpx;
}
.goods-info.data-v-1cf27b2a { padding: 16rpx;
}
.goods-title.data-v-1cf27b2a { font-size: 28rpx; color: #333; display: -webkit-box; -webkit-box-orient: vertical; -webkit-line-clamp: 2; overflow: hidden;
}
.goods-bottom.data-v-1cf27b2a { display: flex; justify-content: space-between; align-items: center; margin-top: 12rpx;
}
.goods-price.data-v-1cf27b2a { font-size: 36rpx; color: #ff4757; font-weight: bold;
}
.goods-like.data-v-1cf27b2a { font-size: 24rpx; color: #999;
}

/* 空状态 */
.empty.data-v-1cf27b2a { text-align: center; padding: 120rpx 0;
}
.empty-img.data-v-1cf27b2a { width: 360rpx; height: 300rpx; opacity: 0.8;
}
.empty-text.data-v-1cf27b2a { color: #999; margin-top: 32rpx; font-size: 32rpx;
}
.load-more.data-v-1cf27b2a {
  padding: 32rpx 0;
  text-align: center;
}
.load-more-btn.data-v-1cf27b2a {
  display: inline-block;
  padding: 16rpx 48rpx;
  background: #007AFF;
  color: #fff;
  border-radius: 50rpx;
  font-size: 28rpx;
}
.loading-text.data-v-1cf27b2a,
.no-more-text.data-v-1cf27b2a {
  color: #999;
  font-size: 28rpx;
}
