/* 导航栏 */
.navbar.data-v-c10c040c {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  height: 88rpx;
  background: linear-gradient(135deg, #667eea, #764ba2);
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 32rpx;
  z-index: 999;
  color: #fff;
}
.search-bar.data-v-c10c040c {
  flex: 1;
  height: 68rpx;
  background: rgba(255, 255, 255, 0.25);
  -webkit-backdrop-filter: blur(10px);
          backdrop-filter: blur(10px);
  border-radius: 34rpx;
  padding: 0 24rpx;
  display: flex;
  align-items: center;
  margin-right: 24rpx;
}
.search-bar input.data-v-c10c040c {
  flex: 1;
  margin-left: 12rpx;
  font-size: 28rpx;
  color: #fff;
  background: transparent;
}
.placeholder.data-v-c10c040c {
  color: #ddd;
}
.clear-btn.data-v-c10c040c {
  font-size: 40rpx;
  color: #ddd;
}
.cancel-btn.data-v-c10c040c {
  font-size: 32rpx;
}

/* 历史 & 热门 */
.history-section.data-v-c10c040c {
  padding: 32rpx 32rpx 0;
}
.section-title.data-v-c10c040c {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 24rpx;
}
.tags.data-v-c10c040c {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}
.tag.data-v-c10c040c {
  padding: 12rpx 28rpx;
  background: #f8f8f8;
  border-radius: 40rpx;
  font-size: 28rpx;
  color: #666;
}
.tag.hot.data-v-c10c040c {
  background: #ffeaea;
  color: #ff4757;
}

/* 搜索结果商品样式（复用首页） */
.result-section.data-v-c10c040c {
  padding: 24rpx 24rpx 0;
}
.goods-waterfall.data-v-c10c040c {
  display: flex;
}
.column.data-v-c10c040c {
  flex: 1;
}
.column.data-v-c10c040c:first-child {
  margin-right: 16rpx;
}
.goods-card.data-v-c10c040c {
  background: #fff;
  border-radius: 20rpx;
  overflow: hidden;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}
.goods-cover.data-v-c10c040c {
  width: 100%;
  height: 360rpx;
}
.goods-info.data-v-c10c040c {
  padding: 16rpx;
}
.goods-title.data-v-c10c040c {
  font-size: 28rpx;
  color: #333;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}
.goods-bottom.data-v-c10c040c {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 12rpx;
}
.goods-price.data-v-c10c040c {
  font-size: 36rpx;
  color: #ff4757;
  font-weight: bold;
}
.goods-like.data-v-c10c040c {
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 24rpx;
  color: #999;
}

/* 加载更多 & 空状态（和首页一致） */
.load-more.data-v-c10c040c {
  padding: 40rpx 0;
  text-align: center;
}
.load-more-btn.data-v-c10c040c {
  display: inline-block;
  padding: 16rpx 48rpx;
  background: #007AFF;
  color: #fff;
  border-radius: 50rpx;
  font-size: 28rpx;
}
.loading-text.data-v-c10c040c, .no-more-text.data-v-c10c040c {
  color: #999;
  font-size: 28rpx;
}
.empty.data-v-c10c040c {
  text-align: center;
  padding: 160rpx 0;
}
.empty-img.data-v-c10c040c {
  width: 360rpx;
  height: 300rpx;
  opacity: 0.8;
}
.empty-text.data-v-c10c040c {
  color: #999;
  margin-top: 32rpx;
  font-size: 32rpx;
}